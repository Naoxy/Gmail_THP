<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
<br>
<br>
<div class="email-app mb-4">
  <nav>
    <%= button_to "Create Email", {controller: "emails", action: "create"}, class: "btn btn-success btn-block", method: "POST", remote: true %>
    <ul class="nav">
      <li class="nav-item">
        <a class="nav-link" href="#"><i class="fa fa-inbox"></i> <span class="badge badge-danger"><%=@emails.count%></span></a>
      </li>
      <%if @emails.count != 0%>
        <%@emails.each do |email|%>
          <li class='nav-item' id="<%=email.id%>">
            <%if email.status == true%>
              <%= link_to email_path(email.id), method: :get, class: 'coucou', remote: :true do %>
                <p class="nav-link" style="color: green" id="stat-<%=email.id%>"> <%=email.object%></p>
              <%end%>
            <%else%>
              <%= link_to email_path(email.id), method: :get, class: 'coucou', remote: :true do %>
                <p class="nav-link" id="stat-<%=email.id%>"> <%=email.object%></p>
              </li>
            <%end%>
          <%end%>
        <%end%>
      <%else%>
      <%end%>
    </ul>
  </nav>
  <%=render 'show'%>
</div>
<script src="https://kit.fontawesome.com/19b1f3be7b.js" crossorigin="anonymous"></script>
